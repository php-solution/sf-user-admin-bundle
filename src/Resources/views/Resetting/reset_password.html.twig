{% extends "UserAdminBundle::layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="panel-heading">
                    <h3 class="panel-title">Reset your password?</h3>
                </div>
                <div class="panel-body">
                    <h3>Please enter new password.</h3>
                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.plainPassword.password) }}
                            {{ form_widget(form.plainPassword.password, {'attr': {'class': 'form-control', 'autocomplete':'off'}} ) }}
                            <span class="form-errors"><span id="{{ form.plainPassword.vars.id }}"></span>{{ form_errors(form.plainPassword.password) }}</span>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.plainPassword.confirm) }}
                            {{ form_widget(form.plainPassword.confirm, {'attr': {'class': 'form-control', 'autocomplete':'off'}} ) }}
                            <span class="form-errors">{{ form_errors(form.plainPassword.confirm) }}</span>
                        </div>
                        <input type="submit" name="send" value="Reset" class="btn btn-sm btn-success" />
                        <a class="pull-right" href="{{ path('admin_security_login') }}"><small>already have an account? login here</small></a>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}